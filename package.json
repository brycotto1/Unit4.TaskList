{
  "name": "tasklist",
  "type": "module",
  "imports": {
    "#*": "./*.js"
  },
  "scripts": {
    "start": "nodemon --env-file=.env server.js",
    "dev": "nodemon --watch --env-file=.env server.js",
    "test": "vitest --bail 1",
    "db:schema": "psql -d tasklist -f db/schema.sql",
    "db:seed": "node --env-file=.env db/seed.js",
    "db:reset": "npm run db:schema && npm run db:seed"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.10",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "supertest": "^7.1.0",
    "vitest": "^3.1.2"
  },
  "engines": {
    "node": ">=22"
  }
}
